/* pages/classify/classify.wxss */

.classify{
    width:100%;
    height:100%;
    display:flex;
    flex-direction: column;
}

.tabs{
    width:100%;
    height:100rpx;
    display: flex;
}

.content{
    flex:1;
    width:100%;
    background: #f4f4f4;
}

.item{
    flex:1;
    height:96rpx;
    border-bottom:4rpx solid darkred;
    color:darkred;
    font-size: 32rpx;
    text-align: center;
    line-height: 96rpx;
    font-family: "微软雅黑";
}

view.active{
    border-bottom:4rpx solid #0f0;
    color:#0f0;
}

#my-swiper , swiper-item{
    width:100%;
    height:100%;
}